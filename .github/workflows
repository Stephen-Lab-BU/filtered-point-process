name: Run Tests

on:
  push:
    branches:
      - multivariate  # Only run tests on the "multivariate" branch
  pull_request:
    branches:
      - multivariate  # Run tests for PRs targeting "multivariate"

jobs:
  test:
    runs-on: ubuntu-latest

    steps:
      # Step 1: Checkout the repository code
      - name: Checkout code
        uses: actions/checkout@v3

      # Step 2: Install Miniconda
      - name: Set up Miniconda
        uses: conda-incubator/setup-miniconda@v2
        with:
          activate-environment: base
          auto-update-conda: true

      # Step 3: Install Mamba and create the environment
      - name: Install Mamba and create environment
        run: |
          conda install mamba -n base -c conda-forge
          mamba env create -f environment.yml

      # Step 4: Activate the environment and install the package
      - name: Activate environment and install package
        shell: bash -l {0}
        run: |
          source activate filtered-point-process
          python -m pip install git+https://github.com/Stephen-Lab-BU/filtered-point-process.git

      # Step 5: Run tests
      - name: Run tests
        shell: bash -l {0}
        run: |
          source activate filtered-point-process
          pytest tests
